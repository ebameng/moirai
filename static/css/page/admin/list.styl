@import "../../liblus/_css3";
@import "../../liblus/widget";

// start file
.mod-admin-list {
	width: 960px;
	margin: auto;
	.header {
		margin-bottom: 12px; 
	}
	.container {
		box()
		
		.list {
			flex()
		}
	}
	tr {
		&.target {
			border: none;
			background: #ff3e3e;
			color: yellow;
		}
		position: relative;
	}
	.roles {
		position: fixed;
		top: 0;
		left: 0;
		z-index: 9999;
		border-radius: 400px;
		width: 400px;
		height: 400px;
		background: red;
	}
}
	
.role-panel, .roles {
	border-right: 4px solid #32a8a8;
	margin-right: 0;
	position: absolute;
	top: 0;
	background: #e2e2e2;
	width: 100%;
	left: 0;
	height: 100%;
	overflow-y: auto;
	padding: 50px 8px  80px 8px;
	.close {
		background: #32a8a8;
		position: fixed;
		top: 50%;
		z-index: 99
		left: $_sidebarWidth;
		margin-left: -2px;
		height: 40px;
		text-align: center;
		font-size: 40px;
		color: #fff;
		cursor: pointer
		width: 40px;
		line-height: 40px;
		border-radius: 2px;
		content: "";
	}
	
	
	h2 {
		font-size: 14px;
		position: relative;
	}
	.item {
		background: #fff;
		margin-bottom: 12px;
		border-radius: 3px;
		overflow: hidden;
		box-shadow: 0 0px 10px 1px #999;
		position: relative;
		&.dragging {
			h2 {
				color: yellow;
				background: red;
			}
			box-shadow: 0 0 4px red;
		}
		h2 {
			padding: 8px;
			color: #EDDDBD;
			background: #32A8A8;
			p {
				font-size: 13px;
			}
		}
		ul {
		 	li {
		 		padding: 6px;
		 		border-top: 1px solid #e8e8e8;
		 		box-shadow: none;
		 		border-radius: 0;
		 		&.empty {
		 			padding: 20px;
		 			margin: 0;
		 			border-radius: 3px;
		 			text-align: center;
		 			color: #3c3c3e;
		 			background: #f8fac8;
		 		}
		 	}
		}
	}
}
.roles {
	position: relative;
	background: #fff;
	padding: 20px;
	height: 400px;
	width: 100%;
	overflow-y: auto;
	border-right: 0;
	.item {
		.remove {
			background: #000;
			position: absolute;
			height: 24px;
			text-align: center;
			font-size: 12px;
			color: #fff;
			cursor: pointer
			width: 24px;
			line-height: 24px;
			border-radius: (@height/2);
			top: 4px;
			right: 4px;
			&:hover {
				animation(rotate 0.6s ease-in-out)
			}
		}
	}
}
.page-nav {
	@extend .class-page-navi
}
