@import "../../liblus/_css3";
@import "../../liblus/widget";

.mod-stickers {
	max-width: 300px;
	.field {
		margin-top: 15px;
	}
	.stype-list {
		border-radius: 5px;
		display: none;
		.type-list {
			float: left;
			padding: 15px 15px 15px 0;
			img {
				width: 40px;
				height: 40px;
			}
			.checkbox input {
				opacity: 0.6!important;
				z-index: 2;
			}
		}
		.add-type {
			display: inline-block;
			background: #ccc;
			padding: 3px;
			border-radius: 2px;
			margin-top :17px;
		}
	}
}