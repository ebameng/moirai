@import "../../liblus/_css3";
@import "../../reset";

html, body {
	height: 100%;
}

.bubble {
	line-height: 20px;
	word-brak: break-all;
	white-space: normal;
	max-height: 40px;
	text-align: center;
	width: 100px;
	padding: 28px;
	top: -10px;
	left: 50%;
	position: fixed;
	z-index: $zIndexLarge;
	background: $themeColorRed;
	color: #fff;
	font-size: 14px;
	border-radius: 10px;
	transform: translate(-50%, -100%);
	transition: all 1s ease-in-out;

	&.slide-down {
		transform: translate(-50%, 0);
	}
}


.followers {
	position: absolute;
	z-index: 9999;
	height: 100%;
	max-height: 100%;
	padding-right: 25px;
	top: 50%;
	left: 25px;
	width: 480px;
	overflow: hidden;
	
	transition(0.2s ease-in-out all);
	transform(translate(-100%, -50%));
	box()
	pack()
	orient(vertical)
	&.show {
		transform(translate(0, -50%));
		left: 0;
	}
	.pull {
		size(25px 78px);
		position: absolute;
		right: 0px;
		top: 50%;
		margin-top: -(@height/2)
		background: #101010;
		box-shadow: 4px 0 36px -8px #CAC5C5;
		border: 1px solid #000;
		border-left: none;
		text-align: center;
	}
	ul {
		padding: 16px;
		box-shadow: 4px 0 36px -8px #CAC5C5;
		background: #000;
		overflow-y: auto;
		max-height: 100%;
		clear()
		li {
			size(72px);
			opacity: 0.6;
			float: left;
			cursor: pointer;
			margin: 4px;
			transition(0.2s ease-in-out all);
			z-index: 0;
			&.selected {
				size(64px)
				opacity: 1;
				background: #fc501f;
				padding: 4px;
			}
			&:hover {
				opacity: 1;
				position: relative;
				z-index: 9999;
				transform: scale(1.4, 1.4);
			}

		}
		.change-next {
			color: white;
			text-align: center;
			line-height: 72px;
		}
	}
}

.img-box {
	position: fixed;
	height: 100%;
	width: 100%;
	right: 0;
	left: 0;
	background: #444;
}


.img-box {
	.img-box-header {
		fontheight(40px);
		box()
		pack(justify)
		z-index: 100;
		background: black;
		color: #bbb;
		position: fixed;
		width: 100%;
		.from {
			position: relative;
			padding-left: 60px;
			.name {
				color: $themeColorRed;
			}
			.location {
				background: url($imgPath + '/icons/16/location.png') no-repeat left center;
				padding-left: 20px;
			}
			.time {
				background: no-repeat left center url($imgPath + '/icons/clock.png');
				background-size: 16px;
				padding-left: 20px;
			}
			img {
				position: absolute;
				left: 10px;
				top: 0;
				width: 32px;
				height: 32px;
				margin-top: 4px;
				border-radius: 4px;
				display: inline-block;
			}
		}
		.desc {
			max-width: 400px;
			width: 300px;
			background: #303030;
			color: #fff;
			padding: 0 8px;
			font-size: 13px;
			position: relative;
			.desc-detail { 
				display: none;
				background: #303030;
			}
			&:hover {
				.desc-detail {
					position: absolute;
					width: 100%;
					top: 0;
					left: 0;
					margin-left: -10px;
					padding: 10px;
					display: block;
				}	
			}
			
		}
		.menu {
			box();
			align(center)
			margin-right: 120px;
			li {
				fontheight(20px);
				margin-right: 2px;
				padding: 4px 10px;
				border-radius: 4px;
				background: #333;
			}
		}
		.close {
		}
	}
	.menu {
		.menu-label, .menu-links {
			position: relative
			&:hover {
				.labels, .links {
					display: block;
				}
			}
			.labels, .links {
				box-shadow: 2px 2px 12px 0 #000;
				position: absolute;
				z-index: 1000;
				padding: 10px;
				display: none;
				background: #333;
				left: 0;
				top: 100%;
				width: 120px;
				text-align: center;
				margin-top: 0px;
				.label, .link {
					display: inline-block;
					padding: 4px;
					background: #000;
					margin: 2px 2px 0 0;
					&:last-child {
						border: none;
					}
				}
			}
		}
	}
	.img-box-main {
		box()
		pack(justify)
		height: 600px;
		margin: 40px auto 0 auto;
	}

	.img-box-main {
		.operation ul .li1:hover {
			transform:scale(2,2);
		}
		.img, .speak-here, .thumbs {
			box-sizing: border-box;
			height: 100%;
		}
		
		.img {
			flex(1.2)
			box()
			align(center)
			max-width: 600px;
			width: 600px;
			text-align: center;
			overflow: hidden;
			padding: 10px;
			 
			img {
				 
				box-shadow: 2px 2px 12px 0 #000
				margin: 0 auto;
				cursor: url($imgPath + "/cur/pic_next.cur"), auto;
			
			}
			img {
				&.left {
					cursor: url($imgPath + "/cur/pic_prev.cur"), auto;
				}
			}
		}
		.speak-here {
			flex(1)
			box()
			orient(vertical)
			box-sizing: border-box;
			padding: 10px;
			position: relative;			
			width: 200px;
			background: 10px;
			overflow: hidden;
			.list {
				flex()
				height: 100px;
				overflow: auto;
			}
			.comment {
				box()
				align()
				pack()
				width: 100%;
				background: gray;
				height: 80px; 
				box-sizing: border-box;
				textarea {
					flex(1)
					border-radius: 4px;
					display: block;
					margin: 10px;
					line-height: 18px;
					outline: none;
					max-height: 60px;
					height: 60px;
					
				}
				div.btn-comment {
					&.disabled {
						background: #E9EAE9;
					}
					box-shadow: 0px 0px 20px 0 #676F67;
					width: 80px;
					height: 40px
					text-align: center;
					margin: 10px;
					margin-left: 0;
					cursor: pointer;
					line-height: 40px;
					background: green;
					color: #fff;
				}
				
			}

		}
		.thumbs {
			flex(1)
			padding: 10px;
			width: 200px;
			.wrap {
				box()
				orient()
				pack()
				align()
				-webkit-overflow-scrolling: touch;
				height: 100%;				
				overflow: auto;
				ul {
					position: relative;
				}
				li {
					&.on {
						border: 4px solid #fff;
						box-shadow: 0 0 4px 0 #fff;
					}
				}
			}
			
		}
	}
	.speak-here .list ul {
		background: #2a2a2a
		padding: 0 12px 0 6px;
		overflow-x: hidden;
		li {
			position: relative;
			overflow-x: hidden;
			cursor: default;
			// &:hover {
			// 	.close {
			// 		transform(translateX(0))
			// 	}
			// }
			.close {
				box()
				pack()
				align()
				transform(translateX(100%))
				position: absolute;
				top: 0;
				right: 0;
				color: #fff;
				text-align: center;
				background: #000;
				height: 100%;
				width: 60px;
				background: red;
				background-size: 18px;
			}
		}
	}
	.speak-here .item {
		border-bottom: 1px solid #1a1a1a;
		padding: 6px 0;
		img {
			size(44px);
			float: left;
		}
		.cmt {
			margin-left: 56px;
		}
		.origin {
			box()
			pack(justify)
			height: 16px;
			p {
				font-size: 14px;
				&.user {
					text-overflow: ellipsis;
					white-space: nowrap;
					max-width: 100px;
					flex(1);
				}
			}
		}
		.content {
			padding: 4px 0;
			text-indent: 16px;
			font-size: 14px;
			line-height: 20px;
			width: 100%;
			color: #a5a5a5;
			text-align:justify;
			text-justify:distribute-all-lines;
		}
		&:last-child {
			border-bottom: none;
		}
	}
	.thumbs  ul {
		width: 140px;
		margin: 0 auto;
		li {
			margin-bottom: 2px;
			&:last-child {
				margin-bottom: 0;
			}
		}
		img {
			cursor: pointer;
		}
	}
}
.selected {
	height: 44px;
	opacity: 1;
	background: #fc501f;
	padding: 4px;
}

.apply {
	background: rgb(253, 255, 0);
}