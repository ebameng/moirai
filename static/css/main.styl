@import "liblus/_css3";

html, body {
	height: 100%;
	overflow: hidden;
	font: 12px/1.5 tahoma,arial,'Hiragino Sans GB';
}

#globalProgress, .bounce-line {
	position: fixed;
	top: 0;
	left: 0;
	z-index: $zIndexLarge + 1;
	width: 0;
	display: none;
	height: 2px;
	color: rgb(178, 34, 34);
	width: 107.456111310268%;
	opacity: 1;
	background-image: linear-gradient(to right, #4cd964, #5ac8fa, #007aff, #34aadc, #5856d6, red);
	transition(width 0.2s ease-in-out)
}
 
#header {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	padding: 0 10px;
	height: 60px;
	z-index: $zIndexLarge;
	background: #f2f2f2;
	border-bottom: 1px solid #e8e8e8;
	box()
	.logo {
		height: 100%;
		width: 80px;
		text-indent: -999px;
		background: url($imgPath + '/icons/logo.png') center center no-repeat;
		background-size: 32px;
	}
	.title {
		fontheight($_headerHeight);
		flex()
		a {
			display: inline;
		}
		color: blue;
		font-size: 24px;
		color: #2599d9;
	}
	.user-nav {
		box();
		pack()
		align()
		img {
			size(24px)
			border-radius: 2px;
		}
		span {
			margin: 0 6px
		}
		.user {
			position: relative;
		}
		.message {
			position: relative;
			display: none;
			i {
				font: 8px normal;
				size(12px);
				position: absolute;
				top: -(@height/2);
				right: -(@height/2);
				border-radius: (@height/2);
				background: red;
				color: #fff;
				line-height: @height;
				text-align: center;
			}
		}
		padding: 0 12px 6px; 
	}
}

#main {
	background: #fff;
	height: 100%;
	overflow-x: hidden;
	overflow-y: auto;
	.content {
		margin: $_headerHeight 0 0 $_sidebarWidth;
		overflow-x: hidden;
		overflow-y: auto;
		-webkit-overflow-scrolling: touch;
		.center {
			padding: 12px;
		}
	}
}
#sideBar {
	position: fixed;
	height: 100%;
	top: $_headerHeight;
	left: 0;
	bottom: 0;
	width: $_sidebarWidth;
	background: #fff;
	.list {
		height: 100%;
		overflow: auto;
		border-right: 1px solid #e8e8e8;
	}
	.nav-welcome {
		margin: 0px 12px 0 12px;
	}
	.group {
		h2 {
			padding: 4px 6px;
			font-size: 14px;
			position: relative;
			a {
				size(16px);
				position: absolute;
				right: 4px;
				top: 4px;
				background: url($imgPath + '/icons/link.png') no-repeat center center;
				font: 12px normal;
				background-size: 16px;
				transition: 0.62s easy-in-out all 1;
				&:hover {
					transform: rotate(720deg);
				}
			}
		}
		ul {
			margin: 0 12px;
		}
	}
	a {
		fontheight(24px);
		padding: 0 8px;
		position: relative;
		&.on {
			// background: $themeColorRed;
			border-left: 4px solid $themeColorRed;
			color: #000;
			background: $themeColorRed;
			color: #fff;
			font-size: 16px;
			&:hover {
				// background: $themeColorRed;
			}
		}
		&:hover {
			// background: #e9e9e9;
		}
	}
}


#footer {
	position: fixed;
	bottom: 0;
	color: #eee;
	padding: 4px;
}

#security {
	transition(all 0.628s ease-in-out);
	transform(translateY(-200%));
	z-index: 99999;
	position: absolute;
	right: 0;
	left: 0;
	width: 100%;
	top: $_headerHeight;
	bottom: 0;
	background: rgba(255, 255, 255, 0.9);
	.update-head-image {
		text-align: center;
		size(100px 30);
		cursor: pointer;
		padding: 2px;
		background: green;
		color: #fff;
	}
	&.show {
		transform(rotateX(720deg) translateY(0));
	}
	.wrap {
		overflow: auto;
		height: 100%;
	}
	.content {
		margin: 20px auto 0 auto;
		width: 500px;
		.form {
			box-shadow: 0 0 10px 0 gray;
			margin-bottom: 10px;
		}
		.signature {
			.submit {
				margin-top: 20px;
			}
		}
		.portrait {
			box()
			pack()
			align()
			.picker {
				size(100px);
				input[type="file"] {
					display: none;
				}
				position: relative;
				p {
					size(60px 28px);
					border: 1px dotted #e8e8e8;
					text-align: center;
					line-height: 28px;
					background: rgba(0, 0, 0, 0.62);
					color: #fff;
					font-size: 12px;
					top: 50%;
					left: 50%;
					position: absolute;
					margin-left:  -(@width/2);
					margin-top: -(@height/2);
				}
			}
			.submit {
				cursor: pointer;
				padding: 10px;
				margin: 0 20px;
				background: green;
				color: #fff;
				border-radius: 4px;
			}
		}
	}
	.arrow {
		width:0px; 
		height:0px; 
		top: -18px;
		border-left: -(@top) solid transparent;
		border-right: -(@top) solid transparent;
		border-bottom: -(@top) solid #fff;
		font-size:0px;
		line-height:0px;
		position: absolute;
		right: 110px;
	}
} 

.circle {
	size(12px);
	box-shadow: 0 0 1px 0px rgb(207, 16, 16);
	border-radius: (@height/2);
	background: #E52121;
	color: #fff;
	line-height: @height;
	text-align: center;
	position: absolute;
	right: -(@width / 2);
	top: -(@height / 2);
}

.bubble {
	box()
	line-height: 20px;
	word-brak: break-all;
	white-space: normal;
	text-align: center;
	max-width: 300px;
	padding: 28px;
	top: -10px;
	left: 50%;
	position: fixed;
	z-index: 999999999999;
	background: $themeColorRed;
	color: #fff;
	font-size: 14px;
	border-radius: 10px;
	transform: translate(-50%, -100%);
	transition: all 1s ease-in-out;

	&.slide-down {
		transform: translate(-50%, 0);
	}
}

.widget-loading {
	position: fixed;
	top: $_headerHeight;
	left: $_sidebarWidth;
	bottom: 0;
	right: 0;
	z-index: 100000000;
	background: rgba(255, 255, 255, 0.62)
	content: "loading";
	&::after{
		size(72px);
		content: "";
		background: url($imgPath + '/icons/loading.png') no-repeat center center;
		background-size: 100%;
		display: block;
		position: absolute;
		left: 50%;
		top: 50%;
		margin: -36px -36px 0 0;
		animation(rotate 2s ease-in-out infinite)
	}
}

.loading-effect {
	position: relative;
	&::after {
		
		display: inline-block;
		outline: 0;
		border: none;
		vertical-align: baseline;
		background-color: red;
		margin: 0 .25em 0 0;
		padding: .8em 1.5em;
		 
		border-radius: 3px;
		content: 'loading......';
		line-height: 100%;
		text-align: center;
		position: absolute;
		z-index: 99;
		background: gray;
		width: 100%;
		height: 100%;
		left: 0;
		top: 0;
	}
}

.iframe {
	z-index: $zIndexLarge;
}


#container {
  margin-top: 20px;
  margin-left: 30px;
  position: relative;
  background: #45453f;
}

@keyframes rotate
	from
		transform(rotate(0deg));
	to
		transform(rotate(360deg));
 
@keyframes line-pulse {
	0% {
		width: 0;
		opacity: 1;
	}
	100% {
		width: 100%;
		opacity: 0.6;
	}
}
 